<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uOtt.seg.mealer.activities.">


    <EditText
        android:id="@+id/teExpireDate"
        android:layout_width="94dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:ems="10"
        android:hint="MM/YY"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvSecCode"
        app:layout_constraintTop_toBottomOf="@+id/teSecCod" />

    <TextView
        android:id="@+id/tvExpireDate"
        android:layout_width="136dp"
        android:layout_height="22dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:text="Expire Date :"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSecCode" />

    <TextView
        android:id="@+id/tvSecCode"
        android:layout_width="136dp"
        android:layout_height="22dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:text="Security Code :"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHolderName" />

    <EditText
        android:id="@+id/teSecCod"
        android:layout_width="66dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="svc"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvSecCode"
        app:layout_constraintTop_toBottomOf="@+id/teHolderName" />

    <EditText
        android:id="@+id/tePwd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:hint="Retype your password"
        android:inputType="textPassword"
        android:textColorHint="@color/material_dynamic_neutral70"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tvPwd2"
        app:layout_constraintTop_toBottomOf="@+id/tePwd" />

    <TextView
        android:id="@+id/tvPwd2"
        android:layout_width="126dp"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Retype Password :"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPwd" />

    <EditText
        android:id="@+id/tePwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@color/material_dynamic_neutral70"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvPwd"
        app:layout_constraintTop_toBottomOf="@+id/teEmail" />

    <TextView
        android:id="@+id/tvPwd"
        android:layout_width="126dp"

        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Password :"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="19dp"
        android:text="Email:"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLName" />


    <EditText
        android:id="@+id/teEmail"
        android:layout_width="210dp"
        android:layout_height="39dp"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:hint="your.email@uOttawa.ca"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/material_dynamic_neutral70"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvEmail"
        app:layout_constraintTop_toBottomOf="@+id/teLName" />

    <TextView
        android:id="@+id/tvFName"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="76dp"
        android:text="First Name :"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/teFName"
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        android:singleLine="true"
        android:textColorHint="@color/material_dynamic_neutral70"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvFName"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLName"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Last Name :"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvFName" />

    <EditText
        android:id="@+id/teLName"
        android:layout_width="210dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        android:textColorHint="@color/material_dynamic_neutral70"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/tvLName"
        app:layout_constraintTop_toBottomOf="@+id/teFName" />

    <EditText
        android:id="@+id/teAddr"
        android:layout_width="351dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="2dp"
        android:background="@android:drawable/alert_light_frame"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textPostalAddress|textMultiLine"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAddr" />

    <TextView
        android:id="@+id/tvHolderName"
        android:layout_width="136dp"
        android:layout_height="21dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Card Holder Name :"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCardNum" />

    <TextView
        android:id="@+id/tvCardNum"
        android:layout_width="136dp"
        android:layout_height="21dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:text="Credit Card Number :"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/tvAddr"
        android:layout_width="111dp"
        android:layout_height="22dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="16dp"
        android:text="Address :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPwd2" />

    <Button
        android:id="@+id/btnAddClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="59dp"
        android:text="Regist"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="27dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teAddr" />

    <EditText
        android:id="@+id/teCardNum"
        android:layout_width="206dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/tvCardNum"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <EditText
        android:id="@+id/teHolderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintStart_toEndOf="@+id/tvSecCode"
        app:layout_constraintTop_toBottomOf="@+id/teCardNum" />

</androidx.constraintlayout.widget.ConstraintLayout>